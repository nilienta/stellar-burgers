{
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint"
	],
	"extends": [
		"plugin:import/recommended"
	],
	"rules": {
		"semi": 0,
		"quotes": [
			2,
			"single",
			{
				"avoidEscape": true
			}
		],
		"no-param-reassign": 0,
		"no-console": "off",
		"import/named": "off",
		"import/prefer-default-export": "off",
		"import/no-default-export": "error",
		"import/no-cycle": "off",
		"import/no-unresolved": "off",
		"import/no-extraneous-dependencies": "off",
		"import/order": [
			"error",
			{
				"groups": [
					[
						"builtin",
						"external"
					],
					"internal",
					[
						"parent",
						"sibling"
					],
					"index"
				],
				"newlines-between": "always"
			}
		]
	}
}
